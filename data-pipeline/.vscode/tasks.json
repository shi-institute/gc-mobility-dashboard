{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ensure conda environment exists",
      "type": "shell",
      "options": {
        "shell": {
          "args": [
            "-i"
          ]
        }
      },
      "command": "conda env list | grep $(pwd)/env || conda env create --file environment.yaml --prefix ./env",
      "group": "none",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "close": true,
        "clear": true,
      }
    },
    {
      "label": "Update conda environment",
      "type": "shell",
      "options": {
        "shell": {
          "args": [
            "-i"
          ]
        }
      },
      "command": "conda env update --file environment.yaml --prefix ./env",
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "close": true,
        "clear": true
      }
    },
    {
      "label": "Pipeline",
      "detail": "Runs the data pipeline",
      "dependsOn": [
        "Ensure conda environment exists",
      ],
      "type": "shell",
      "options": {
        "shell": {
          "args": [
            "-i"
          ]
        }
      },
      "command": "conda activate ./env && python src/main.py",
      "group": "none",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "showReuseMessage": false,
      }
    },
    {
      "label": "Build data-pipeline docker image",
      "type": "shell",
      "command": "docker build -t gc-mobility-dashboard-data-pipeline:latest .",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "close": true,
        "clear": true
      }
    },
    {
      "label": "Pipeline (docker)",
      "detail": "Runs the data pipeline",
      "dependsOn": [
        "Build data-pipeline docker image",
      ],
      "type": "shell",
      "command": "docker run -it --volume ./input:/input --volume ./data:/data --user 1000 gc-mobility-dashboard-data-pipeline:latest",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "showReuseMessage": false,
      }
    },
  ]
}
